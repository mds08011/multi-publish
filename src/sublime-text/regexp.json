{
    "template": {
        "match": null,
        "replace": null
    },
    "expand footnotes": {
        "match": "% (\d+)$",
        "replace": "% $1\n\\footnote{$1}"
    },
    "transform section glyph": {
        "match": "§",
        "replace": "\\S"
    },
    "apostrophe 1": {
        "match": "[’‘]",
        "replace": "'"
    },
    "quote left": {
        "match": "[“”]",
        "replace": "\""
    },
    "space after comma": {
        "match": "(\w),(\w)",
        "replace": "$1, $2"
    },
    "locate sentences": {
        "match": "\. ",
        replace: null
    }
    "locate no space around quote": {
        "match": "\w\"\w",
        replace: null
    }
    "locate incorrect elipses": {
        "match": "\.\s+\.",
        replace: null
    }
    "transform dash": {
        "match": "—",
        "replace": "-"
    },
    "unescaped special characters": {
        "match": "([^\\])([&@_#$])",
        "replace": "$1\\$2"
    },
    "unescaped percents": {
        "match": "([^\\}\.\"\'])%",
        "replace": "$1\\%"
    },
    "junk footnotes": {
        "match": "[\.!\?][ \*©”!°%®“’>\?'\"`]+",
        "replace": null
    }

}
